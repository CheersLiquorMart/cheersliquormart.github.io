---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Cheers Liquor Mart</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-emerald-800 text-white">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold">Cheers Liquor Mart</a>
          <div class="space-x-6">
            <a href="/policies" class="hover:text-emerald-200">Policies</a>
            <a href="/events" class="hover:text-emerald-200">Events</a>
            <a href="/employee-resources" class="hover:text-emerald-200">Resources</a>
          </div>
        </div>
      </nav>
    </header>

    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-gray-800 text-white mt-auto">
      <div class="container mx-auto px-4 py-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-6">
          <div>
            <h3 class="font-bold mb-2">Contact</h3>
            <p>123 Main Street</p>
            <p>Your City, State 12345</p>
            <p>(555) 123-4567</p>
          </div>
          <div>
            <h3 class="font-bold mb-2">Hours</h3>
            <p>Mon-Fri: 9:00 AM - 9:00 PM</p>
            <p>Saturday: 10:00 AM - 8:00 PM</p>
            <p>Sunday: 11:00 AM - 6:00 PM</p>
          </div>
          <div>
            <h3 class="font-bold mb-2">Quick Links</h3>
            <ul class="space-y-1">
              <li><a href="/policies" class="hover:text-emerald-200">Company Policies</a></li>
              <li><a href="/events" class="hover:text-emerald-200">Upcoming Events</a></li>
              <li><a href="/employee-resources" class="hover:text-emerald-200">Employee Resources</a></li>
            </ul>
          </div>
        </div>
        <div class="text-center border-t border-gray-700 pt-6">
          <p>&copy; {new Date().getFullYear()} Cheers Liquor Mart. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>