---
interface Props {
  title: string;
  body: string;
  href?: string;
}

const { title, body, href } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
  <h2 class="text-xl font-bold mb-3 text-emerald-800">{title}</h2>
  <p class="text-gray-600 mb-4">{body}</p>
  {href && (
    <a href={href} class="text-emerald-700 hover:text-emerald-900 font-medium">
      Learn More â†’
    </a>
  )}
</div>