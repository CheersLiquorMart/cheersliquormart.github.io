---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const cards = [
  {
    title: "Company Policies",
    body: "Access our comprehensive guide to workplace policies, procedures, and guidelines.",
    href: "/policies"
  },
  {
    title: "Upcoming Events",
    body: "Stay updated with company events, training sessions, and team activities.",
    href: "/events"
  },
  {
    title: "Employee Resources",
    body: "Access important resources including Paychex Flex and health provider information.",
    href: "/employee-resources"
  }
];
---

<Layout title="Welcome to Cheers Liquor Mart">
  <main class="max-w-6xl mx-auto px-4 py-8">
    <section class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-6">Welcome to Cheers Liquor Mart</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Your trusted partner in the beverage industry. Access important company information and resources.
      </p>
    </section>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {cards.map(card => (
        <Card {...card} />
      ))}
    </div>
  </main>
</Layout>
